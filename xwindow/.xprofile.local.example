#/bin/sh

# may be used by: i3-sensible-terminal, xdg-open, rofi-sensible-terminal
export TERMINAL=alacritty
# may be used by: i3-sensible-browser, xdg-open, tmux-open
export BROWSER=vivaldi-stable

export QT_SCALE_FACTOR=1.3
# on 1920x1080 laptop
export QT_FONT_DPI=96

#https://wiki.archlinux.org/title/xorg#Display_size_and_DPI
#96 +0%, 120 +25%, 144 +50%, 168 +75%, 192 +100%
xrandr --dpi 120

